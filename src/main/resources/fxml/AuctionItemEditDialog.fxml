<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea"
          fx:controller="com.philabid.ui.AuctionItemEditDialogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <Label text="%auctionItems.label.category" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="categoryComboBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="%auctionItems.label.catalogNumber" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="catalogNumberField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="%auctionItems.label.orderNumber" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="orderNumberField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="%auctionItems.label.notes" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextArea fx:id="notesArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <ButtonBar GridPane.columnSpan="2" GridPane.rowIndex="4">
        <buttons>
            <Button fx:id="saveButton" onAction="#handleSave" text="%common.save"/>
            <Button fx:id="saveAndAddAnotherButton" onAction="#handleSaveAndAddAnother" text="%common.saveAndAddAnother"
                    defaultButton="true"/>
            <Button fx:id="cancelButton" onAction="#handleCancel" text="%common.cancel" cancelButton="true"/>
        </buttons>
    </ButtonBar>

    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
</GridPane>
