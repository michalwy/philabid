<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="com.philabid.ui.AuctionController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="%auctions.title"/>
        <ToolBar>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddAuction" text="%common.new"/>
            <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditAuction" text="%common.edit"/>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteAuction" text="%common.delete"/>
        </ToolBar>
        <TableView fx:id="auctionTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="auctionHouseColumn" prefWidth="70.0" text="%auctions.column.house"/>
                <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="%auctions.column.category"/>
                <TableColumn fx:id="catalogNumberColumn" prefWidth="50.0" text="%auctions.column.catalogNumber"/>
                <TableColumn fx:id="conditionColumn" prefWidth="70.0" text="%auctions.column.condition"/>
                <TableColumn fx:id="urlColumn" prefWidth="150.0" text="%auctions.column.url"/>
                <TableColumn fx:id="currentPriceColumn" prefWidth="50.0" text="%auctions.column.price"/>
                <TableColumn fx:id="catalogValueColumn" prefWidth="50.0" text="%auctions.column.catalogValue"/>
                <TableColumn fx:id="endDateColumn" prefWidth="150.0" text="%auctions.column.endDate"/>
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="%auctions.column.status"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
