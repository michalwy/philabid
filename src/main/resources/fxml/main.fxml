<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.StatusBar?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="com.philabid.ui.MainController">
    <top>
        <VBox>
            <MenuBar fx:id="menuBar">
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="%menu.file">
                    <MenuItem mnemonicParsing="false" text="%menu.file.new"/>
                    <MenuItem mnemonicParsing="false" text="%menu.file.open"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" text="%menu.file.exit"/>
                </Menu>
                <Menu fx:id="editMenu" mnemonicParsing="false" text="%menu.edit">
                    <MenuItem fx:id="preferencesMenuItem" mnemonicParsing="false"
                              text="%menu.edit.preferences"/>
                </Menu>
                <Menu fx:id="viewMenu" mnemonicParsing="false" text="%menu.view">
                    <MenuItem mnemonicParsing="false" text="%menu.view.refresh"/>
                </Menu>
                <Menu fx:id="toolsMenu" mnemonicParsing="false" text="%menu.tools">
                    <MenuItem fx:id="auctionHousesMenuItem" mnemonicParsing="false"
                              text="%menu.tools.auctionHouses"/>
                    <MenuItem fx:id="catalogsMenuItem" mnemonicParsing="false" text="%menu.tools.catalogs"/>
                    <MenuItem fx:id="categoriesMenuItem" mnemonicParsing="false" text="%menu.tools.categories"/>
                    <MenuItem fx:id="conditionsMenuItem" mnemonicParsing="false" text="%menu.tools.conditions"/>
                </Menu>
                <Menu fx:id="helpMenu" mnemonicParsing="false" text="%menu.help">
                    <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="%menu.help.about"/>
                </Menu>
            </MenuBar>
        </VBox>
    </top>
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="dashboardTab" text="%tab.dashboard">
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Label fx:id="welcomeLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"
                           text="%welcome.message"/>
                    <Separator/>
                    <HBox spacing="20.0">
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                                   text="%dashboard.active.auctions"/>
                            <Label text="0"/>
                        </VBox>
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                                   text="%dashboard.active.bids"/>
                            <Label text="0"/>
                        </VBox>
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                                   text="%dashboard.watchlist.items"/>
                            <Label text="0"/>
                        </VBox>
                    </HBox>
                    <Separator/>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                           text="%dashboard.recent.activity"/>
                    <TextArea fx:id="logTextArea" prefHeight="200.0"/>
                </VBox>
            </Tab>
            <Tab fx:id="activeAuctionsTab" text="%tab.auctions.active">
                <fx:include source="ActiveAuctionView.fxml" fx:id="activeAuctionView"/>
            </Tab>
            <Tab fx:id="archivedAuctionsTab" text="%tab.auctions.archived">
                <fx:include source="ArchivedAuctionView.fxml" fx:id="archivedAuctionView"/>
            </Tab>
            <Tab fx:id="valuationTab" text="%tab.auctions.archived">
                <fx:include source="ValuationView.fxml" fx:id="valuationView"/>
            </Tab>
            <Tab fx:id="auctionItemsTab" text="%tab.auctionItems">
                <fx:include fx:id="auctionItemView" source="AuctionItemView.fxml"/>
            </Tab>
            <Tab fx:id="catalogValuesTab" text="%tab.catalogValues">
                <fx:include fx:id="catalogValueView" source="CatalogValueView.fxml"/>
            </Tab>
        </TabPane>
    </center>
    <bottom>
        <StatusBar fx:id="statusBar" text="Ready"/>
    </bottom>
</BorderPane>