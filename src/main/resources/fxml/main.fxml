<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.StatusBar?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.philabid.ui.MainController">
   <top>
      <VBox>
         <MenuBar fx:id="menuBar">
           <menus>
             <Menu fx:id="fileMenu" mnemonicParsing="false" text="%menu.file">
               <items>
                 <MenuItem mnemonicParsing="false" text="%menu.file.new" />
                 <MenuItem mnemonicParsing="false" text="%menu.file.open" />
                 <SeparatorMenuItem />
                 <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" text="%menu.file.exit" />
               </items>
             </Menu>
             <Menu fx:id="editMenu" mnemonicParsing="false" text="%menu.edit">
               <items>
                 <MenuItem mnemonicParsing="false" text="%menu.edit.preferences" />
               </items>
             </Menu>
             <Menu fx:id="viewMenu" mnemonicParsing="false" text="%menu.view">
               <items>
                 <MenuItem mnemonicParsing="false" text="%menu.view.refresh" />
               </items>
             </Menu>
             <Menu fx:id="toolsMenu" mnemonicParsing="false" text="%menu.tools">
               <items>
                 <MenuItem mnemonicParsing="false" text="%menu.tools.database" />
                 <MenuItem fx:id="auctionHousesMenuItem" mnemonicParsing="false" text="%menu.tools.auctionHouses" />
               </items>
             </Menu>
             <Menu fx:id="helpMenu" mnemonicParsing="false" text="%menu.help">
               <items>
                 <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="%menu.help.about" />
               </items>
             </Menu>
           </menus>
         </MenuBar>
      </VBox>
   </top>
   <center>
      <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="dashboardTab" text="%tab.dashboard">
            <content>
              <VBox spacing="10.0">
                 <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </padding>
                 <children>
                    <Label fx:id="welcomeLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="%welcome.message" />
                    <Separator />
                    <HBox spacing="20.0">
                       <children>
                          <VBox spacing="5.0">
                             <children>
                                <Label style="-fx-font-weight: bold;" text="%dashboard.active.auctions" />
                                <Label text="0" />
                             </children>
                          </VBox>
                          <VBox spacing="5.0">
                             <children>
                                <Label style="-fx-font-weight: bold;" text="%dashboard.active.bids" />
                                <Label text="0" />
                             </children>
                          </VBox>
                          <VBox spacing="5.0">
                             <children>
                                <Label style="-fx-font-weight: bold;" text="%dashboard.watchlist.items" />
                                <Label text="0" />
                             </children>
                          </VBox>
                       </children>
                    </HBox>
                    <Separator />
                    <Label style="-fx-font-weight: bold;" text="%dashboard.recent.activity" />
                    <TextArea fx:id="logTextArea" prefHeight="200.0" />
                 </children>
              </VBox>
            </content>
          </Tab>
          <Tab fx:id="auctionsTab" text="%tab.auctions">
            <content>
               <VBox spacing="10.0">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <children>
                     <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="%auctions.title" />
                     <TableView prefHeight="400.0">
                       <columns>
                         <TableColumn prefWidth="200.0" text="%auctions.column.title" />
                         <TableColumn prefWidth="150.0" text="%auctions.column.house" />
                         <TableColumn prefWidth="100.0" text="%auctions.column.date" />
                         <TableColumn prefWidth="100.0" text="%auctions.column.status" />
                       </columns>
                     </TableView>
                  </children>
               </VBox>
            </content>
          </Tab>
          <Tab fx:id="catalogTab" text="%tab.catalog">
            <content>
               <VBox spacing="10.0">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <children>
                     <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="%catalog.title" />
                     <TextField promptText="%catalog.search.prompt" />
                     <TableView prefHeight="400.0">
                       <columns>
                         <TableColumn prefWidth="150.0" text="%catalog.column.country" />
                         <TableColumn prefWidth="100.0" text="%catalog.column.year" />
                         <TableColumn prefWidth="200.0" text="%catalog.column.description" />
                         <TableColumn prefWidth="100.0" text="%catalog.column.value" />
                       </columns>
                     </TableView>
                  </children>
               </VBox>
            </content>
          </Tab>
          <Tab fx:id="bidsTab" text="%tab.bids">
            <content>
               <VBox spacing="10.0">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <children>
                     <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="%bids.title" />
                     <TableView prefHeight="400.0">
                       <columns>
                         <TableColumn prefWidth="200.0" text="%bids.column.item" />
                         <TableColumn prefWidth="100.0" text="%bids.column.amount" />
                         <TableColumn prefWidth="100.0" text="%bids.column.status" />
                         <TableColumn prefWidth="150.0" text="%bids.column.time" />
                       </columns>
                     </TableView>
                  </children>
               </VBox>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
   <bottom>
      <StatusBar fx:id="statusBar" text="Ready" />
   </bottom>
</BorderPane>