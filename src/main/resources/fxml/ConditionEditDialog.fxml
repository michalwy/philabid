<?xml version="1.0" encoding="UTF-8"?>

<?import com.philabid.ui.control.CrudEditDialog?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<CrudEditDialog xmlns:fx="http://javafx.com/fxml/1" fx:id="crudEditDialog" xmlns="http://javafx.com/javafx/17.0.2-ea"
                fx:controller="com.philabid.ui.ConditionEditDialogController">
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10"/>
        </padding>

        <Label text="%conditions.label.name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="%conditions.label.code" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="codeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
    </GridPane>
</CrudEditDialog>
