<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.philabid.ui.ConditionEditDialogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label text="%conditions.label.name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="%conditions.label.code" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="codeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <ButtonBar GridPane.columnSpan="2" GridPane.rowIndex="2">
        <buttons>
            <Button fx:id="saveButton" onAction="#handleSave" text="%common.save" defaultButton="true" />
            <Button fx:id="cancelButton" onAction="#handleCancel" text="%common.cancel" cancelButton="true" />
        </buttons>
    </ButtonBar>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
</GridPane>
