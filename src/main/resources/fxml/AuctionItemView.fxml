<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="com.philabid.ui.AuctionItemController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="%auctionItems.title"/>
        <ToolBar>
            <items>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddAuctionItem" text="%common.new"/>
                <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditAuctionItem"
                        text="%common.edit"/>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteAuctionItem"
                        text="%common.delete"/>
            </items>
        </ToolBar>
        <TableView fx:id="table" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="categoryColumn" prefWidth="200.0" text="%auctionItems.column.category"/>
                <TableColumn fx:id="catalogNumberColumn" prefWidth="150.0" text="%auctionItems.column.catalogNumber"/>
                <TableColumn fx:id="catalogInfoColumn" prefWidth="200.0" text="%auctionItems.column.catalogInfo"/>
                <TableColumn fx:id="notesColumn" prefWidth="300.0" text="%auctionItems.column.notes"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
