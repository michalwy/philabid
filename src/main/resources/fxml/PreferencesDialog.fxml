<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea"
          fx:controller="com.philabid.ui.PreferencesDialogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <Label text="%preferences.label.defaultCurrency" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="defaultCurrencyComboBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="%preferences.label.analysisDays" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Spinner fx:id="analysisDaysSpinner" editable="true" maxWidth="Infinity" GridPane.columnIndex="1"
             GridPane.rowIndex="1"/>

    <Label text="Allegro clientId" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="allegroClientIdField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button onAction="#handleAllegroAuth" text="Allegro auth" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <ButtonBar GridPane.columnSpan="2" GridPane.rowIndex="5">
        <buttons>
            <Button onAction="#handleSave" text="%common.save" defaultButton="true"/>
            <Button onAction="#handleCancel" text="%common.cancel" cancelButton="true"/>
        </buttons>
    </ButtonBar>

    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
</GridPane>