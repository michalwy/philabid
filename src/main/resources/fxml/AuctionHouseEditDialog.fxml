<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea"
          fx:controller="com.philabid.ui.AuctionHouseEditDialogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <Label text="%auctionHouses.label.name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="%auctionHouses.label.website" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="websiteField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="%auctionHouses.label.email" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="%auctionHouses.label.phone" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="%auctionHouses.label.address" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="%auctionHouses.label.country" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="countryField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="%auctionHouses.label.currency" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <ComboBox fx:id="currencyComboBox" xmlns:fx="http://javafx.com/fxml" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <ButtonBar GridPane.columnSpan="2" GridPane.rowIndex="7">
        <buttons>
            <Button fx:id="saveButton" onAction="#handleSave" text="%common.save" defaultButton="true"/>
            <Button fx:id="cancelButton" onAction="#handleCancel" text="%common.cancel" cancelButton="true"/>
        </buttons>
    </ButtonBar>

    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
</GridPane>
