<?xml version="1.0" encoding="UTF-8"?>

<?import com.philabid.ui.control.DashboardAuctionsSummary?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10.0" fx:controller="com.philabid.ui.DashboardController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="%welcome.message"/>
    <Separator/>
    <HBox spacing="50.0">
        <VBox spacing="5.0">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="%dashboard.active.auctions"/>
            <Label fx:id="activeAuctionsLabel" alignment="CENTER_RIGHT"/>
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Expired Auctions"/>
            <Label fx:id="expiredAuctionsLabel" alignment="CENTER_RIGHT"/>
        </VBox>
        <VBox spacing="5.0">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="%dashboard.active.bids"/>
            <Label fx:id="activeBidsLabel" alignment="CENTER_RIGHT"/>
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Winning Bids"/>
            <Label fx:id="winningBidsLabel" alignment="CENTER_RIGHT"/>
        </VBox>
        <VBox spacing="5.0">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Maximum Bids Value"/>
            <Label fx:id="maxBidsValueLabel" alignment="CENTER_RIGHT"/>
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Current Bids Value"/>
            <Label fx:id="currentBidsValueLabel" alignment="CENTER_RIGHT"/>
        </VBox>
    </HBox>
    <Separator/>
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Auctions by seller"/>
            <DashboardAuctionsSummary fx:id="summaryBySeller" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Auctions by category"/>
            <DashboardAuctionsSummary fx:id="summaryByCategory" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Auctions by condition"/>
            <DashboardAuctionsSummary fx:id="summaryByCondition" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Auctions with missing or outdated catalog value"/>
    <TableView fx:id="catalogValueNeededTable" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="catalogValueNeededCategoryColumn" prefWidth="200.0"
                         text="%catalogValues.column.category"/>
            <TableColumn fx:id="catalogValueNeededCatalogNumberColumn" prefWidth="200.0"
                         text="%catalogValues.column.catalogNumber"/>
            <TableColumn fx:id="catalogValueNeededConditionColumn" prefWidth="150.0"
                         text="%catalogValues.column.condition"/>
            <TableColumn fx:id="catalogValueNeededCatalogColumn" prefWidth="200.0"
                         text="%catalogValues.column.catalog"/>
            <TableColumn fx:id="catalogValueNeededCatalogValueColumn" prefWidth="100.0"
                         text="%catalogValues.column.value"/>
        </columns>
    </TableView>
</VBox>