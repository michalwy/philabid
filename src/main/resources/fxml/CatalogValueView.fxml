<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="com.philabid.ui.CatalogValueController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="%catalogValues.title"/>
        <ToolBar>
            <items>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddCatalogValue" text="%common.new"/>
                <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditCatalogValue"
                        text="%common.edit"/>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteCatalogValue"
                        text="%common.delete"/>
            </items>
        </ToolBar>
        <TableView fx:id="catalogValueTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="categoryColumn" prefWidth="200.0" text="%catalogValues.column.category"/>
                <TableColumn fx:id="catalogNumberColumn" prefWidth="200.0" text="%catalogValues.column.catalogNumber"/>
                <TableColumn fx:id="conditionColumn" prefWidth="150.0" text="%catalogValues.column.condition"/>
                <TableColumn fx:id="catalogColumn" prefWidth="200.0" text="%catalogValues.column.catalog"/>
                <TableColumn fx:id="valueColumn" prefWidth="100.0" text="%catalogValues.column.value"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
